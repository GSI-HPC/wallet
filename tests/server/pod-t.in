use Test::More;

my @files = qw(keytab-backend wallet-admin wallet-backend);
my $total = scalar (@files);
plan tests => $total;

eval 'use Test::Pod 1.00';
SKIP: {
    skip $total, 'Test::Pod 1.00 required for testing POD' if $@;
    for my $file (@files) {
        pod_file_ok ("@abs_top_srcdir@/server/$file", "server/$file");
    }
}
